            <!--------class m1 is used to grab data from inputs
                       class m2 is used to notify error------>
        <div class="container pb-4 mt-5 shadow rounded" >
            <form action="/admin/changePassword/<%=data.uname%>" onsubmit="return check()" method="POST">
               <div class="text-center alert alert-primary">
               	<h1 class="alert-heading"> <em>Update data</em></h1>
               </div>
              
               
                  <div class="col">
                     <div class="form-group">
                           <label for="uname">User Name</label>
                           <input type="text" class="form-control m1" id="User Name" name="uname" value=<%=data.uname%>>
                           <p id="nameinfo" class="form-text text-danger m2"></p>
                     </div>
                  </div>
               
                
               
                  <div class="col">
                     <div class="form-group">
                           <label for="email">Email</label>
                           <input type="text" class="form-control m1" id="Email" name="email" value=<%=data.email%>>
                           <p id="emailinfo" class="form-text text-danger m2"></p>
                     </div>
                  </div>
                  <div class="col">
                     <div class="form-group">
                        <label for="mobile">Mobile number</label>
                        <input type="number" class="form-control m1" id="Mobile Number" name="mobile" value=<%=data.mobile%> >
                        <p id="mobileinfo" class="form-text text-danger m2"></p>
                     </div>
                  </div>
               
                  <div class="col">
                     <div class="form-group">
                        <label for="password">Enter Passowrd</label>
                        <input type="password" class="form-control m1" id="password" name="password">
                        <p id="passwordinfo" class="form-text text-danger m2"></p>
                     </div>
               	</div>
               
                  <div class="col">
                     <div class="form-group">
                        <label for="Rpassword">Enter Passowrd</label>
                        <input type="password" class="form-control m1" id="rpassword" name="rpassword">
                        <p id="rpasswordinfo" class="form-text text-danger m2"></p>
                     </div>
               	</div>
                
               <button type="submit" class="btn btn-primary">Submit</button>
               <small id="emailHelp" class="form-text text-muted">We'll never share your details with anyone else.</small>
            </form>
        </div>    
                
          
         
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script>
         function check(){
               for(var i=0;i<$(".m1").length;i++){
                  
                  if($(".m1")[i].value==0){
                     $(".m2")[i].innerHTML=("Enter "+$(".m1")[i].id);
                     for(var j=0;j<i;j++){
                        if($(".m1")[j].value!=0){
                           $(".m2")[j].innerHTML=("");
                        }
                     }
                     return false
                  }
                  for(var j=0;j<$(".m1").length;j++){
                        if($(".m1")[j].value!=0){
                           $(".m2")[j].innerHTML=("");
                        }
                     }
               }

               var num=$(".m1")[2].value;
               if(num.length!=10){
                  $(".m2")[2].innerHTML=("Check your number");
                  return false
               }
               if($("#password")[0].value != $("#rpassword")[0].value){
                  $("#passwordinfo")[0].innerHTML="enter password carefully"
                  $("#rpasswordinfo")[0].innerHTML="enter password carefully"
                  return false
               }else{
                  
                  $("#passwordinfo")[0].innerHTML=""
                  $("#rpasswordinfo")[0].innerHTML=""
               }
               $(".m2")[6].innerHTML=("");
               return true
         }
        </script>
    </body>
